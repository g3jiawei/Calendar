<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context=".AddCourseActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:layout_weight="2" >
    	
	    <TextView
	        android:id="@+id/label_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:layout_alignLeft="@+id/label_time"
	        android:layout_alignStart="@+id/label_time"
	        android:layout_alignBaseline="@+id/edit_title"
	        android:text="@string/label_title" />
		<EditText
	        android:id="@+id/edit_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dp"
	        android:padding="8dp"
        	android:background="@drawable/text_border"
	        android:layout_toRightOf="@+id/label_title"
	        android:layout_toEndOf="@+id/label_title"
	        android:inputType="text"
	        android:digits="QqWwEeRrTtYyUuIiOoPpAaSsDdFfGgHhJjKkLlZzXxCcVvBbNnMm0123456789,.'- "
	        android:hint="@string/hint_title"
	        android:maxLength="35"
	        android:singleLine="true"
	        android:imeOptions="actionNext" />
	    <TextView
	        android:id="@+id/label_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/edit_title"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:layout_alignRight="@+id/label_time"
	        android:layout_alignEnd="@+id/label_time"
	        android:layout_alignBaseline="@+id/edit_date"
	        android:text="@string/label_date" />

		<EditText
		    android:id="@+id/edit_date"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/edit_title"
		    android:layout_alignStart="@+id/edit_title"
		    android:layout_below="@id/edit_title"
		    android:layout_marginTop="8dp"
		    android:background="@drawable/text_border"
		    android:digits="0123456789/"
		    android:hint="@string/hint_date"
		    android:imeOptions="actionNext"
		    android:inputType="date"
		    android:maxLength="10"
		    android:padding="8dp"
		    android:singleLine="true" />

		<TextView
	        android:id="@+id/label_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:layout_below="@id/edit_date"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:layout_alignBaseline="@+id/edit_time"
	        android:text="@string/label_time" />

		<EditText
		    android:id="@+id/edit_time"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/edit_date"
		    android:layout_alignStart="@+id/edit_date"
		    android:layout_below="@id/edit_date"
		    android:layout_marginTop="8dp"
		    android:background="@drawable/text_border"
		    android:digits="0123456789:"
		    android:hint="@string/hint_time"
		    android:inputType="time"
		    android:maxLength="12"
		    android:padding="8dp" />
	
	</RelativeLayout>
	
	<LinearLayout
	    android:id="@+id/linearLayout1"
	   	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:gravity="center"
    	android:layout_weight="1" >
    	
	    <Button
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/button_save"
	        android:onClick="saveNewEvent" />
	
	</LinearLayout>

</LinearLayout>
